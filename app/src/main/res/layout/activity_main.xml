<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">



    <!-- 底部菜单栏-->
    <LinearLayout
        android:id="@+id/llMenu"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_alignParentBottom="true"
        android:background="#36f"
        android:orientation="horizontal"
        >

        <RadioButton
            android:id="@+id/btnNewGoods"
            style="@style/menu_item_style"
            android:drawableTop="@drawable/selector_menu_item_new_good"
            android:text="新品"
            android:button="@null"
            />

        <RadioButton
            android:id="@+id/btnBoutique"
            style="@style/menu_item_style"
            android:drawableTop="@drawable/selector_menu_item_boutique"
            android:text="精品"
            android:button="@null"
            />

        <RadioButton
            android:id="@+id/btnCategory"
            style="@style/menu_item_style"
            android:drawableTop="@drawable/selector_menu_item_category"
            android:text="分类"
            android:button="@null"/>

        <RadioButton
            android:id="@+id/btnCollect"
            style="@style/menu_item_style"
            android:drawableTop="@drawable/selector_menu_item_personal_center"
            android:text="个人中心"
            android:button="@null"/>

        <RelativeLayout
            android:id="@+id/layoutCart"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            style="@style/menu_item_style"
            >

            <RadioButton
                android:id="@+id/tvshop"
                style="@style/menu_item_style_cart"
                android:drawableTop="@drawable/selector_menu_item_cart"
                android:text="购物"
                android:button="@null"
                android:layout_centerInParent="true"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerInParent="true"
                android:text="10"
                android:background="@drawable/cart_hint"
                />


        </RelativeLayout>

    </LinearLayout>
    <RelativeLayout
        android:id="@+id/fl"
        android:layout_above="@id/llMenu"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </RelativeLayout>
</RelativeLayout>